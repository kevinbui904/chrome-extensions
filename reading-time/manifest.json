{
    "manifest_version": 3,
    "name": "Reading time extension",
    "version": "1.0",
    "description": "Add reading times to wikipedia sites",
    
    "icons": {
        "16": "./images/icon-16.png",
        "32": "./images/icon-32.png",
        "48": "./images/icon-32.png",
        "128": "./images/icon-32.png"
    },

    "content_scripts": [
        {
            "js": ["scripts/content.js"],
            "matches": [
                "https://en.wikipedia.org/*"
            ]
        }
    ]
}

